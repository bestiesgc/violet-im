*,
*::before,
*::after {
	box-sizing: border-box;
}

:root {
	height: 100%;
}

body {
	height: 100%;
	margin: 0;
}

img {
	display: block;
	max-width: 100%;
}

p {
	margin: 0;
}

input {
	font: inherit;
	color: inherit;
	padding: 0;
}

button {
	user-select: none;
	font: inherit;
	color: inherit;
	background: none;
	border: none;
	padding: 0;
	cursor: pointer;
	text-align: inherit;
}
